<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/manbuDefaultPgaeBackGroundColor">

    <RelativeLayout
        android:id="@+id/basicInfo_genderlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="40dp"
        android:background="@drawable/app_layout_click">

        <RelativeLayout
            android:id="@+id/basicInfo_genderMaleLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/manBuItemHeight"
            android:layout_marginTop="0.5dp"
            android:clickable="true"
            android:visibility="visible">

            <TextView
                android:id="@+id/doctorBasicInfoMaleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="@color/manbuDefaultTextColor"
                android:textSize="@dimen/manbu_more_textsize" />

            <RadioButton
                android:id="@+id/radioMaleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:checked="false" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/basicInfo_genderFemaleLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/manBuItemHeight"
            android:layout_below="@id/basicInfo_genderMaleLayout"
            android:layout_marginTop="0.5dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/doctorBasicInfoFemaleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="@color/manbuDefaultTextColor"
                android:textSize="@dimen/manbu_more_textsize" />

            <RadioButton
                android:id="@+id/radioFemaleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:checked="false" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>