<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/catalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@color/manbuDefaultPgaeBackGroundColor"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="A"
        android:textColor="@color/manbuDefaultTextColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/app_ui_listview_item_normal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/contactPhotoImage"
            android:layout_width="@dimen/contact_layout_item_image_height"
            android:layout_height="@dimen/contact_layout_item_image_height"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@mipmap/default_nor_avatar"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/text_contact_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/manbuDefaultTextColor"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/usr_level"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/app_ui_button_normal"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text=""
            android:textColor="@color/manbuDefaultTextColor"
            android:textSize="@dimen/manbu_default_textsize"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/usr_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/app_ui_button_normal"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text=""
            android:textColor="@color/manbuDefaultTextColor"
            android:textSize="@dimen/manbu_default_textsize"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>