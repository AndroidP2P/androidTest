<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/more_popViewLayout"
        android:background="@drawable/app_ui_listview_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/manbuLogoutTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/manbu_indicateTextTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="提示"
                android:textColor="@color/manbuDefaultTextColor"
                android:textSize="@dimen/manbu_default_textsize_large"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/moreOperationContentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/manbuLogoutTitleLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/manbu_popWindowIndicate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="24dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/manbuDefaultTextColor"
                android:textSize="@dimen/manbu_default_textsize_middle" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/moreOperationLayout"
            android:layout_below="@id/moreOperationContentLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorTransparent"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Cancel"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/colorTransparent"
                android:text="取消"
                android:textColor="@color/manbuDefaultTextColor"
                android:textSize="13sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/Sure"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@color/colorTransparent"
                android:text="确定"
                android:textColor="@color/manbuDefaultTextColor"
                android:textSize="@dimen/manbu_default_textsize" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
